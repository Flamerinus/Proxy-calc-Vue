---
interface Props {
	title: string;
}

const { title } = Astro.props;
import "../styles/globals.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";

import { Separator } from "@/components/ui/separator";
---

<!doctype html>
<html lang="en">
	<head>
		<script is:inline>
			const getThemePreference = () => {
				if (
					typeof localStorage !== "undefined" &&
					localStorage.getItem("theme")
				) {
					return localStorage.getItem("theme");
				}
				return window.matchMedia("(prefers-color-scheme: dark)").matches
					? "dark"
					: "light";
			};
			const isDark = getThemePreference() === "dark";
			document.documentElement.classList[isDark ? "add" : "remove"](
				"dark",
			);

			if (typeof localStorage !== "undefined") {
				const observer = new MutationObserver(() => {
					const isDark =
						document.documentElement.classList.contains("dark");
					localStorage.setItem("theme", isDark ? "dark" : "light");
				});
				observer.observe(document.documentElement, {
					attributes: true,
					attributeFilter: ["class"],
				});
			}
		</script>
		<meta charset="UTF-8" />
		<meta name="description" content="Proxy file size calculator" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<div
			class="container h-auto max-w-screen-xl relative inset-x-0 top-14 z-0"
		>
			<Separator
				class="h-full absolute -left-32 hidden 2xl:block"
				orientation="vertical"
			/>
			<Separator
				class="h-full absolute -right-32 hidden 2xl:block"
				orientation="vertical"
			/>
			<slot />
			<Footer />
		</div>
	</body>
</html>
