---
import ModeToggle from "./ModeToggle.vue";
import HeaderComp from "./HeaderComp.vue";
import { Separator } from "@/components/ui/separator";
import { FileVideo } from "lucide-vue-next";
// header-height variable defined in globals.css
---

<header>
    <div
        class="h-[var(--header-height)] mx-auto w-full max-w-screen-2xl bg-background flex justify-between sm:justify-end fixed inset-x-0 right-0 z-50"
    >
        <HeaderComp client:load />
        <div class="flex sm:order-first sm:mr-auto ml-2 self-center">
            <a href="/">
                <FileVideo size={32} stroke-width={1} />
            </a>
            <span class="flex items-center text-lg">
                <a href="/">Proxycalc</a>
            </span>
        </div>
        <ModeToggle client:load />
        <Separator class="absolute bottom-0" />
        <Separator class="absolute left-0 hidden 2xl:block" orientation="vertical" />
        <Separator class="absolute right-0 hidden 2xl:block" orientation="vertical" />
    </div>
</header>
